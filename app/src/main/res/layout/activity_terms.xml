<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    tools:context=".Activity.App.terms">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/linear"
            android:layout_marginTop="20dp"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageButton
                android:id="@+id/back"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginStart="12dp"
                android:src="@drawable/backtohome"
                android:background="@android:color/transparent"
                />

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/pe_dalanmak_ertleri"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginStart="12dp"
                android:textColor="@color/fourth"
                />
        </LinearLayout>


        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/info"
            android:layout_below="@id/linear"
            android:layout_margin="15dp"
            android:background="@drawable/ak_bg"
            android:padding="12dp"
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/title2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/terms_title"
                android:layout_marginBottom="20dp"
                android:textSize="18sp"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/third"
                />


            <com.codesgood.views.JustifiedTextView
                android:id="@+id/tv_justified_paragraph"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/terms_of_use"
                android:textColor="@color/fourth"
                android:textSize="16sp" />


        </LinearLayout>

        <LinearLayout
            android:layout_below="@id/info"
            android:layout_width="match_parent"
            android:layout_marginBottom="12dp"
            android:gravity="center_horizontal"
            android:layout_height="wrap_content">


            <ImageView
                android:id="@+id/logo"
                android:onClick="gotoGeekSpaceSite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/footers"
                android:padding="5dp"
                />
        </LinearLayout>

    </RelativeLayout>

</ScrollView>