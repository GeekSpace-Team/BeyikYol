<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#fff"
    android:layout_height="match_parent"
    tools:context=".Activity.Car.ShareCar">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:paddingBottom="140dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
                <RelativeLayout
                    android:id="@+id/top"
                    android:padding="12dp"
                    android:background="@drawable/bottom_rounded"
                    android:elevation="2dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:id="@+id/linear"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical">

                        <ImageButton
                            android:id="@+id/back_btn"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:background="@android:color/transparent"
                            android:tint="@color/white"
                            android:src="@drawable/backtohome" />


                    </LinearLayout>


                        <LinearLayout
                            android:orientation="vertical"
                            android:gravity="center"
                            android:layout_below="@id/linear"
                            android:layout_centerHorizontal="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <ImageView
                                android:src="@drawable/share_car"
                                android:layout_width="150dp"
                                android:scaleType="centerCrop"
                                android:layout_height="130dp"
                                app:tint="@color/white" />

                            <TextView
                                android:id="@+id/share_title"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Ulag Paýlaşmak"
                                android:textStyle="bold"
                                android:layout_marginBottom="20dp"
                                android:textColor="@color/white"
                                android:textSize="20sp" />
                        </LinearLayout>

                </RelativeLayout>


           <LinearLayout
               android:layout_marginTop="80dp"
               android:layout_below="@id/top"
               android:orientation="vertical"
               android:layout_centerInParent="true"
               android:layout_width="match_parent"
               android:layout_height="wrap_content">

                <Button
                    android:id="@+id/send"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="40dp"
                    android:layout_marginEnd="40dp"
                    android:background="@drawable/smallcarinfobg"
                    android:text="Ugratmak"
                    android:textAllCaps="false"
                    android:textColor="#fff"
                    android:textSize="15sp"
                    android:elevation="2dp"
                    android:backgroundTint="@color/first"
                    />

               <Button
                   android:id="@+id/receive"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_marginStart="40dp"
                   android:layout_marginTop="25dp"
                   android:layout_marginEnd="40dp"
                   android:background="@drawable/smallcarinfobg"
                   android:text="Kabul etmek"
                   android:textAllCaps="false"
                   android:textColor="#fff"
                   android:elevation="2dp"
                   android:textSize="15sp"
                   android:backgroundTint="@color/ui_green"
                   />

           </LinearLayout>




        </RelativeLayout>
    </ScrollView>

    <LinearLayout
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_marginBottom="12dp"
        android:gravity="center_horizontal"
        android:layout_height="wrap_content">


        <ImageView
            android:id="@+id/logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/footers"
            android:padding="5dp"
            />
    </LinearLayout>

</RelativeLayout>