<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:mypie="http://schemas.android.com/tools"
    app:cardCornerRadius="15dp"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="20dp"
    android:layout_marginEnd="20dp"
    android:layout_marginStart="20dp"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:visibility="gone"
        android:id="@+id/first"
        android:background="@drawable/smallcarinfobg"
        android:layout_width="match_parent"
        android:padding="15dp"
        android:layout_height="170dp">

        <LinearLayout
            android:id="@+id/add"
            android:orientation="vertical"
            android:layout_centerInParent="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageButton
                android:id="@+id/add_car"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/ic_baseline_add_24"
                android:tint="@color/fourth"
                android:background="@drawable/cyrcle_gr"
                android:padding="2dp"
                android:scaleType="centerCrop"
                android:textAllCaps="false"
                android:layout_width="30dp"
                android:layout_height="30dp"
                />

            <TextView
                android:id="@+id/add_info"
                android:layout_marginTop="6dp"
                android:layout_width="match_parent"
                android:textSize="14sp"
                android:layout_height="wrap_content"
                android:text="@string/ulag_maglumaty_yzy_ngo_u"
                android:textAlignment="center"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                />
        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/second"
        android:layout_marginEnd="0dp"
        android:background="@drawable/smallcarinfobg"
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:padding="15dp"
        >

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Car Name"
            android:textColor="#000"
            android:textSize="18sp"
            />

        <LinearLayout
            android:layout_below="@id/name"
            android:id="@+id/con"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">



            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/car_image"
                android:layout_width="150dp"
                android:layout_height="120dp"
                app:riv_corner_radius="12dp"
                android:scaleType="fitCenter"
                android:src="@drawable/unnamed"
                />
        </LinearLayout>


        <TableLayout
            android:orientation="vertical"
            android:layout_toEndOf="@id/con"
            android:layout_width="match_parent"
            android:layout_marginTop="30dp"
            android:layout_marginStart="12dp"
            android:layout_height="wrap_content">


            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/benzin_title"
                    android:text="@string/km_miles"
                    android:layout_width="wrap_content"
                    android:textColor="@color/fourth"
                    android:gravity="center_vertical"
                    android:textSize="12sp"
                    android:layout_height="wrap_content"
                    android:layout_column="1"
                    />

                <TextView
                    android:id="@+id/benzin"
                    android:text="0"
                    android:layout_width="wrap_content"
                    android:textColor="@color/fourth"
                    android:layout_marginStart="10dp"
                    android:gravity="center_vertical"
                    android:textSize="12sp"
                    android:layout_height="wrap_content"
                    android:layout_column="2"
                    />
            </TableRow>


            <TableRow
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/in_sonky_benzin_title"
                    android:text="@string/benzin"
                    android:layout_width="wrap_content"
                    android:textColor="@color/fourth"
                    android:gravity="center_vertical"
                    android:textSize="12sp"
                    android:layout_column="1"
                    android:layout_height="wrap_content"
                    />
                <TextView
                    android:id="@+id/in_sonky_benzin"
                    android:text="0"
                    android:layout_width="wrap_content"
                    android:textColor="@color/fourth"
                    android:gravity="center_vertical"
                    android:layout_marginStart="10dp"
                    android:textSize="12sp"
                    android:layout_column="2"
                    android:layout_height="wrap_content"
                     />
            </TableRow>


            <TableRow
                android:layout_marginTop="0dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/in_sonky_chalyshyk_title"
                    android:text="@string/calyshmyk"
                    android:layout_width="wrap_content"
                    android:textColor="@color/fourth"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_column="1"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/in_sonky_chalyshyk"
                    android:text="0"
                    android:layout_width="wrap_content"
                    android:textColor="@color/fourth"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_column="2"
                    android:gravity="center_vertical"
                    android:textSize="12sp" />
            </TableRow>



            <TableRow
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/in_sonky_remont_title"
                    android:text="@string/remont"
                    android:layout_width="wrap_content"
                    android:textColor="@color/fourth"
                    android:gravity="center_vertical"
                    android:layout_column="1"
                    android:textSize="12sp"
                    android:layout_height="wrap_content"
                     />

                <TextView
                    android:id="@+id/in_sonky_remont"
                    android:text="0"
                    android:layout_width="wrap_content"
                    android:textColor="@color/fourth"
                    android:layout_marginStart="10dp"
                    android:gravity="center_vertical"
                    android:layout_column="2"
                    android:textSize="12sp"
                    android:layout_height="wrap_content"
                     />
            </TableRow>


        </TableLayout>







    </RelativeLayout>


</androidx.cardview.widget.CardView>

