<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/whitebgofpages"
    xmlns:app="http://schemas.android.com/apk/res-auto">

   <ScrollView
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       >
       <RelativeLayout
           android:layout_width="match_parent"
           android:paddingBottom="100dp"
           android:layout_height="wrap_content">


           <ImageView
               android:id="@+id/gifImageView"
               android:layout_width="match_parent"
               android:layout_marginTop="30dp"
               android:layout_centerHorizontal="true"
               android:layout_height="300dp"
               android:src="@drawable/lang"

               />

           <TextView
               android:id="@+id/text1"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Hoş geldiňiz!"
               android:layout_below="@id/gifImageView"
               android:layout_centerHorizontal="true"
               android:layout_marginTop="20dp"
               android:textSize="35sp"
               android:textColor="@color/colorPrimary"
               android:textStyle="bold"
               android:layout_gravity="center"/>

           <TextView
               android:id="@+id/text2"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Dil saýla we dowam etmek üçin indiki düwmesini çek"
               android:textSize="20sp"
               android:layout_below="@id/text1"
               android:layout_marginStart="20dp"
               android:layout_marginEnd="20dp"
               android:layout_centerHorizontal="true"
               android:layout_marginTop="15dp"
               android:textAlignment="center"
               />




    <Spinner
        android:id="@+id/lang_select"
        android:layout_below="@id/text2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/e_bg"
        android:padding="2dp"
        android:layout_marginBottom="40dp"
        android:layout_centerInParent="true"

        />


       </RelativeLayout>

   </ScrollView>

    <com.ebanx.swipebtn.SwipeButton
        android:id="@+id/swipe_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        app:inner_text="SWIPE"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        app:inner_text_color="@android:color/white"
        app:inner_text_size="16sp"
        app:inner_text_top_padding="18dp"
        app:inner_text_bottom_padding="18dp"
        app:inner_text_background="@drawable/swipe_bg"
        app:button_image_height="62dp"
        app:button_image_width="100dp"
        app:button_image_disabled="@drawable/ic_baseline_arrow_right_alt_24"
        app:button_image_enabled="@drawable/ic_baseline_check_circle_24"
        app:button_left_padding="20dp"
        app:button_right_padding="20dp"
        app:button_top_padding="20dp"
        app:button_bottom_padding="20dp"
        app:button_background="@drawable/shape_button"
        app:initial_state="disabled"
        app:has_activate_state="true"
        />

</RelativeLayout>