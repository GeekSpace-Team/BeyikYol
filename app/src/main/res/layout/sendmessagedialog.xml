<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@android:color/transparent"
    android:layout_centerInParent="true"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_marginEnd="30dp"
        android:layout_marginStart="30dp"
        android:layout_height="380dp"
        android:layout_centerInParent="true">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="370dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:background="@drawable/bg_remove_dialog"
            >

            <ImageView
                android:id="@+id/status"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginTop="15dp"
                android:layout_centerHorizontal="true"
                android:scaleType="centerCrop"
                android:src="@drawable/share_my_location"
                app:tint="@color/first" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/t1"
                android:layout_below="@id/status"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="8dp"
                android:text="Uh oh"
                android:visibility="gone"
                android:textColor="#4CAF50"
                android:textSize="15sp"
                android:textStyle="bold"

                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/t2"
                android:layout_below="@id/status"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:textAlignment="center"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:text="@string/meni_erle_n_erimi_pa_la_mak"
                android:textColor="@color/third"
                android:textSize="16sp"
                />

            <LinearLayout
                android:layout_below="@id/t2"
                android:orientation="horizontal"
                android:id="@+id/edittext"
                android:layout_marginTop="30dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
               <LinearLayout
                   android:orientation="vertical"
                   android:layout_width="0dp"
                   android:layout_weight="1"
                   android:layout_marginStart="35dp"
                   android:layout_marginEnd="35dp"
                   android:layout_height="wrap_content">


                   <LinearLayout
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content">
                       <LinearLayout
                           android:id="@+id/my_location_dialog"
                           android:gravity="center"
                           android:background="@drawable/selected_method"
                           android:layout_weight="1"
                           android:paddingBottom="5dp"
                           android:paddingTop="5dp"
                           android:orientation="vertical"
                           android:layout_width="0dp"
                           android:layout_marginEnd="12dp"
                           android:layout_marginStart="35dp"
                           android:layout_height="wrap_content">
                            <ImageView
                                android:id="@+id/mylocation_dialog_icon"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:src="@drawable/user_arrow"

                                />
                           <TextView
                               android:id="@+id/my_location_tv"
                               android:textAlignment="center"
                               android:layout_marginTop="4dp"
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:textColor="@color/second"
                               android:lines="2"
                               android:text="@string/erle_n_erim"
                               android:textSize="12sp"
                               />
                       </LinearLayout>

                       <LinearLayout
                           android:id="@+id/select_map_dialog"
                           android:gravity="center"
                           android:background="@drawable/selected_method"
                           android:layout_weight="1"
                           android:backgroundTint="@color/second"
                           android:paddingBottom="5dp"
                           android:paddingTop="5dp"
                           android:orientation="vertical"
                           android:layout_width="0dp"
                           android:layout_marginEnd="35dp"
                           android:layout_marginStart="15dp"
                           android:layout_height="wrap_content">
                           <ImageView
                               android:id="@+id/select_map_icon"
                               android:layout_width="30dp"
                               android:layout_height="30dp"
                               android:src="@drawable/sky_blue_marker"
                               />
                           <TextView
                               android:id="@+id/select_map_tv"
                               android:textAlignment="center"
                               android:layout_marginTop="4dp"
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:lines="2"
                               android:textColor="@color/third"
                               android:text="@string/kartadan_sa_lanan"
                               android:textSize="12sp"
                               />
                       </LinearLayout>
                   </LinearLayout>

                   <TextView
                       android:id="@+id/t3"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_marginLeft="15dp"
                       android:layout_marginTop="10dp"
                       android:visibility="gone"
                       android:textColor="@color/third"
                       android:text="@string/ugradyljak_telefon_belgisini_girizi"
                       android:textSize="12sp" />

                   <EditText
                       android:visibility="gone"
                       android:id="@+id/tel"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:layout_marginLeft="15dp"
                       android:layout_marginTop="8dp"
                       android:layout_marginRight="15dp"
                       android:textColor="@color/third"
                       android:layout_marginBottom="1dp"
                       android:background="@drawable/smallcarinfobg"
                       android:inputType="numberSigned"
                       android:padding="10dp"
                       android:textSize="16sp" />

                   <TextView
                       android:id="@+id/t4"
                       android:visibility="gone"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_marginLeft="15dp"
                       android:layout_marginTop="5dp"
                       android:layout_marginEnd="20dp"
                       android:textColor="@color/first"
                       android:text="@string/kontaklardan_sa_la"
                       android:layout_gravity="end"
                       android:textSize="12sp" />

               </LinearLayout>



            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@id/edittext"
                android:layout_marginTop="30dp"
                android:layout_centerHorizontal="true"
                android:gravity="center"

                android:orientation="horizontal">
                <Button
                    android:layout_width="90dp"
                    android:layout_height="40dp"
                    android:id="@+id/cancel"
                    android:background="@drawable/smallcarinfobg"
                    android:layout_marginEnd="30dp"
                    android:text="@string/cancel"
                    android:textAllCaps="false"
                    android:textColor="@color/fourth"
                    android:textSize="14sp"
                    />
                <Button
                    android:layout_width="90dp"
                    android:layout_height="40dp"
                    android:id="@+id/back"
                    android:background="@drawable/save_btn"
                    android:text="@string/ugrat"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    />
            </LinearLayout>

        </RelativeLayout>


    </RelativeLayout>

</RelativeLayout>